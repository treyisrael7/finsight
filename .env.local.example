# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Model Server Configuration
MODEL_SERVER_URL=http://localhost:3001

# Security Settings
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Rate Limiting (requests per minute per IP)
RATE_LIMIT=60

# Model Configuration
MAX_TOKEN_LENGTH=128
TEMPERATURE=0.7
TOP_P=0.9

# Security Configuration
# Rate limiting (attempts per minute)
NEXT_PUBLIC_RATE_LIMIT_MAX=5
NEXT_PUBLIC_RATE_LIMIT_WINDOW_MS=60000

# Password Requirements
NEXT_PUBLIC_MIN_PASSWORD_LENGTH=8
NEXT_PUBLIC_REQUIRE_SPECIAL_CHARS=true
NEXT_PUBLIC_REQUIRE_NUMBERS=true
NEXT_PUBLIC_REQUIRE_UPPERCASE=true

# Email Configuration (for verification)
NEXT_PUBLIC_SMTP_HOST=your-smtp-host
NEXT_PUBLIC_SMTP_PORT=587
NEXT_PUBLIC_SMTP_USER=your-smtp-user
NEXT_PUBLIC_SMTP_PASSWORD=your-smtp-password 